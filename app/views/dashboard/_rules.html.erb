<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.title %></td>
        <td><%= rule.is_active == true ? "On" : "Off" %></td>
        <td>
          <%# unless rule.integration.blank? %>
          <%= link_to 'Edit', edit_rule_path(rule), class: 'btn btn-mini' %>
          <%= link_to 'Destroy', rule_path(rule), :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add New', new_rule_path, class: 'btn btn-primary btn-primary-main' # first require select integration %>
